<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="240dp"
    android:layout_marginStart="8dp"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white"
    android:padding="16dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="9dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- FrameLayout to overlay the favorite button on the image -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/product_image" />

            <!-- Favorite button placed above the image -->
            <ImageButton
                android:id="@+id/btn_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|top"
                android:backgroundTint="@color/white"
                android:background="@android:color/transparent"
                android:contentDescription="@string/add_to_favourite"
                android:src="@drawable/ic_heart_outline_" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/primary_800"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Product" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/primary_800"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="$20.69" />

            <ImageView
                android:id="@+id/img_star"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="12dp"
                android:contentDescription="star_icon"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="4.9" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
